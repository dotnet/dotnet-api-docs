<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_Navigation">
        <!-- NavigationCommands.Refresh -->
        <MenuItem
          Command="NavigationCommands.Refresh"
          CommandTarget="{Binding ElementName=frame}" />
      </MenuItem>
    </Menu>
    <Border Margin="5" Padding="5" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="5">
      <!-- The following Frame is used to process NavigationCommands.Refresh commands -->
      <Frame Name="frame" NavigationUIVisibility="Hidden" Source="Page1.xaml" />
    </Border>
  </DockPanel>
</Window>

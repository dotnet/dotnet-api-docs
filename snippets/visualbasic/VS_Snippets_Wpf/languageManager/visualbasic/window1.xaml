<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="languageManagerSample.Window1"
    Title="InputLanguageManager"
    Loaded="changeLang">
  <Border Margin="5" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top"
          BorderBrush="DarkSlateBlue"
          Background="White"
          BorderThickness="1"
          Width="400"
          Height="500">
      <StackPanel>
        <TextBox Margin="5"  Width="200" Height="200" Name="myTextBox" TextWrapping="Wrap">InputMethod and InputLanguageManager Sample</TextBox>
        <Button Margin="5" Width="100" Height="20" Click="inputManager">Click</Button>
        <TextBlock Margin="5" Name="tb1" />
        <TextBlock Margin="5" Name="tb2" />
        <ListBox Margin="5" Name="lb1"/>
        <TextBlock Margin="5" Name="tb3" />
        <TextBlock Margin="5" Name="tb4" />
        <TextBlock Margin="5" Name="tb5" />
        <TextBlock Margin="5" Name="tb6" />
      </StackPanel>
  </Border>
</Window>

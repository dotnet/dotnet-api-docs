<Window x:Class="Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DrawingAttributesSample"
    Loaded="WindowLoaded"
    >
    <DockPanel Name="root">

        <StackPanel  Background="DarkSlateBlue">
            <Button Name="switchHighlighter" MinHeight="20" MaxHeight="50" MinWidth="40"
              Click="SwitchHighlighter_Click">Highlighter</Button>
            <Button Name="saveStrokes" MinHeight="20" MaxHeight="50" MinWidth="40"
              Click="SaveStrokes_Click">Save Strokes</Button>
            <Button Name="loadStrokes" MinHeight="20" MaxHeight="50" MinWidth="40"
              Click="LoadStrokes_Click">Load Strokes</Button>
            <Button Name="clearStrokes" MinHeight="20" MaxHeight="50" MinWidth="40"
              Click="ClearStrokes_Click">Clear Strokes</Button>
            <Button Name="changeColors" MinHeight="20" MaxHeight="50" MinWidth="40"
              Click="ChangeColors_Click">Change Colors</Button>
            <Button Name="changePenColors" MinHeight="20" MaxHeight="50" MinWidth="40"
              Click="ChangePenColors_Click">Change Pen Colors</Button>
        </StackPanel>
    </DockPanel>
</Window>
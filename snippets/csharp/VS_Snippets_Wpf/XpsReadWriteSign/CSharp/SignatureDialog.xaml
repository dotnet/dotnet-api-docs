<Window x:Class="SDKSample.SignatureDialog" SizeToContent="WidthAndHeight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Margin="10">
    <ListBox Name="SignatureList" Height="200">
      <StackPanel Name="SignatureHeader" Orientation="Horizontal" Background="LightGray">
        <TextBlock Width="100" Background="LightGray">Requested Signer</TextBlock>
        <TextBlock Width="100" Background="LightGray">Signer</TextBlock>
        <TextBlock Width="100" Background="LightGray">Intent</TextBlock>
        <TextBlock Width="100" Background="LightGray">Location</TextBlock>
        <TextBlock Width="50" Background="LightGray">Sign By</TextBlock>
      </StackPanel>
    </ListBox>
    <StackPanel Orientation="Horizontal">
      <Button Name="SignatureDef">Add Signature Definition</Button>
      <Button Name="Sign">Sign</Button>
      <Button Name="Done">Done</Button>
    </StackPanel>
  </StackPanel>
</Window>
